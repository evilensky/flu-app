<%= simple_form_for @survey, html: { class: 'custom' } do |f| %>
  <% @survey.questions.order(:data_label).each do |q| %>
    <%= f.simple_fields_for :questions, q do |q_fields| %>
      <% if q.input_type == 'string' %>
        <%= q_fields.input :response_data, label: q.content, input_html: { style: 'width: 25%;' } %>
      <% else %>
        <%= q_fields.association :responses, collection: q.responses, as: q.input_type, label: q.content, label_method: ->(item) { ('<span class="custom ' + {check_boxes: 'checkbox', radio_buttons: 'radio'}[q.input_type.to_sym] + '"></span>').html_safe + item.label }, input_html: { class: 'hidden-field', checked: false }, wrapper_html: { style: 'margin-bottom: 1em;' } %>
      <% end %>
    <% end %>
  <% end %>

  <%= f.button :submit, 'Submit', { class: 'radius' } %>
<% end %>
